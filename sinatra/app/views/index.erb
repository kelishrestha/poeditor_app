<div class="container">
  <h1>POEditor application</h1>
  <hr>
  <h3>Search by project</h3>
  <form action="/languages" method="post">
    <select class="form-select" name="project[id]">
      <option selected>Choose project</option>
      <% @projects.each do |project| %>
        <option value="<%= project['id'] %>|<%= project['name']%>"><%= project['name'] %></option>
      <% end %>
    </select>
    <button type="submit" class="btn btn-primary my-3">Fetch project data</button>
  </form>
  <hr>
  <h3>Custom Search</h3>
  <form action="/languages" method="post">
    <div class="row mb-3">
      <label for="project-id" class="col-sm-2 col-form-label">Project ID</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="project-id" name="project[id]">
      </div>
    </div>
    <div class="row mb-3">
      <label for="project-key" class="col-sm-2 col-form-label">Project Key</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="project-key" name="project[key]">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Fetch project data</button>
  </form>
</div>
